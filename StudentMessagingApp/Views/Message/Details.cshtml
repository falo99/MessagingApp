@model StudentMessagingApp.Models.Message


<p>list of messages</p>

<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>StudentId</th>
            <th>Title</th>
            <th>Content</th>
        </tr>
    </thead>
    <tbody>
            <tr>
                <td>
                @Model.Id
                </td>
                <td>
                @Model.StudentId
                </td>
                <td>
                @Model.Title
                </td>
                <td>
                @Model.Content
                </td>
                <td>
                   <form asp-controller="Message" asp-action="Delete" asp-route-id="@Model.Id" method="post">
                      <input type="submit" name="delete" value="Delete message" />
                    </form>
                </td>
              
            </tr>
    </tbody>
</table>
